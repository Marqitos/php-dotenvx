{
    "name": "rodas/dotenvx",
    "description": "Dotenvx encryption for PHP",
    "type": "library-scaffold",
    "keywords": ["dotenv", "dotenvx"],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Marcos Porto MariÃ±o",
            "email": "php@marcospor.to"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.4",
        "ext-sodium": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.4",
        "phpunit/php-code-coverage": "^12.4"
    },
    "autoload-dev": {
        "psr-4": {
            "Rodas\\Dotenvx\\": "src/Rodas/Dotenvx/",
            "Rodas\\Test\\Dotenvx\\": "tests/Dotenvx/"
        }
    },    
    "config": {
        "sort-packages": true
    },    
    "scripts": {
        "dev:build:clean": "git clean -fX build/",
        "dev:lint": [
            "@dev:lint:syntax"
        ],        
        "dev:lint:syntax": "parallel-lint --colors src/",
        "dev:test": [
            "@dev:lint",
            "@dev:test:unit"
        ],
        "dev:test:unit": "phpunit --colors=always",
        "test": "@dev:test"
    },
    "scripts-descriptions": {
        "dev:build:clean": "Cleans the build/ directory.",
        "dev:lint": "Runs all linting checks.",
        "dev:lint:syntax": "Checks for syntax errors.",
        "dev:test": "Runs linting and static analysis.",
        "dev:test:unit": "Runs unit tests.",
        "test": "Runs linting and static analysis."
    }
}
